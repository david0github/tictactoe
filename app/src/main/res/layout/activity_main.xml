<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ser210.quinnipiac.edu.tictactoe.MainActivity">

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/message"
        android:layout_marginTop="25dp"
        android:columnCount="3"
        android:rowCount="3">


        <Button
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:layout_row="0"
            android:text=""
            android:textSize="60dp"
            android:freezesText="true" />

        <Button
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_column="1"
            android:layout_row="0"
            android:text=""
            android:textSize="60dp"
            android:freezesText="true" />

        <Button
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_row="0"
            android:text=""
            android:textSize="60dp"
            android:freezesText="true" />

        <Button
            android:id="@+id/four"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_row="1"
            android:text=""
            android:textSize="60dp"
            android:freezesText="true" />

        <Button
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="1"
            android:text=""
            android:textSize="60dp"
            android:freezesText="true" />

        <Button
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_marginLeft="15dp"
            android:layout_row="1"
            android:text=""
            android:textSize="60dp"
            android:freezesText="true" />

        <Button
            android:id="@+id/seven"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_row="2"
            android:text=""
            android:textSize="60dp"
            android:freezesText="true" />

        <Button
            android:id="@+id/eight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="1"
            android:layout_row="2"
            android:text=""
            android:textSize="60dp"
            android:freezesText="true" />

        <Button
            android:id="@+id/nine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_marginLeft="15dp"
            android:text=""
            android:textSize="60dp"
            android:freezesText="true" />

    </GridLayout>

    <TextView
        android:id="@+id/ai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/winMsg"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_toEndOf="@+id/message"
        android:layout_toRightOf="@+id/message"
        android:gravity="left"
        android:text="AI Opponent"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/reset"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/reset"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        android:gravity="left"
        android:text="Good Luck!"
        android:textSize="20dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ai"
        android:layout_alignBottom="@+id/ai"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_toEndOf="@+id/ai"
        android:layout_toRightOf="@+id/ai"
        android:text="reset" />

    <TextView
        android:id="@+id/aiTurn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:gravity="left"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/player1Turn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:gravity="left"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/winMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:gravity="left"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/loseMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:gravity="left"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/drawMsg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:gravity="left"
        android:textSize="30dp" />

</RelativeLayout>
